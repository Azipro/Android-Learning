<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:gravity="center"
        android:hint="Username"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:id="@+id/ed2"
        android:hint="Password"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_bt"
        android:text="Save"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/read_bt"
        android:text="Read" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Out_save"
        android:id="@+id/out_save"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Out_read"
        android:id="@+id/out_read"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XML"
        android:id="@+id/Xml_bt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analysis Xml"
        android:id="@+id/Analysis_xml"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shared"
        android:id="@+id/Shared_bt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/tv1"/>

</LinearLayout>